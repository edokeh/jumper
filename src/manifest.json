{
    "name" : "Jumper",
    "description" : "自由地在帐号间跳跃",
    "version" : "0.2",
    "manifest_version" : 2,
    "browser_action" : {
        "default_icon" : "img/icon38.png",
        "default_popup" : "popup.html"
    },
    "options_page" : "options.html",
    "background" : {
        "scripts" : [
            "js/libs/underscore-min.js",
            "js/libs/jquery-1.8.3.min.js",
            "js/libs/backbone-min.js",
            "js/libs/backbone-localstorage.js",
            "js/model/website.js",
            "js/background.js"
        ],
        "persistent" : true
    },
    "permissions" : [
        "*://*/*",
        "tabs",
        "cookies"
    ],
    "icons" : {
        "16" : "img/icon38.png",
        "48" : "img/icon48.png",
        "128" : "img/icon48.png"
    },
    "content_security_policy" : "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "minimum_chrome_version" : "26",
    "homepage_url" : "https://github.com/edokeh/jumper"
}